# Example Terraform Variables File for AWS
# Copy this file to terraform.tfvars and customize the values
# terraform.tfvars is automatically loaded by Terraform and ignored by git

# AWS region for deployment
# Popular options: "us-east-1", "us-west-2", "eu-west-1", "ap-southeast-1"
aws_region = "us-east-1"

# Base name for the S3 bucket (random suffix will be added for uniqueness)
bucket_name = "clickops-to-devops-demo"

# Environment tag for resources
# Options: "dev", "staging", "prod", "demo"
environment = "demo"

# Enable versioning on the S3 bucket
enable_versioning = true

# CloudWatch log retention in days
# Options: 1, 3, 5, 7, 14, 30, 60, 90, 120, 150, 180, 365, 400, 545, 731, 1827, 3653
log_retention_days = 7

# Example configurations for different environments:

# Development Environment
# aws_region = "us-east-1"
# bucket_name = "mycompany-dev-storage"
# environment = "dev"
# enable_versioning = false
# log_retention_days = 3

# Production Environment
# aws_region = "us-west-2"
# bucket_name = "mycompany-prod-storage"
# environment = "prod"
# enable_versioning = true
# log_retention_days = 365